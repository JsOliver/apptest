<?xml version='1.0' encoding='utf-8'?>
<widget id="webcarrao" version="1.0.3" xmlns="https://ncbrasil.com.br/" xmlns:cdv="https://ncbrasil.com.br/">
    <name>Webcarr√£o</name>
    <description>
        O maior portal de automoveis do Brasil.
    </description>
    <author email="joaovictordada2@gmail.com" href="https://ncbrasil.com.br/">
        NCBrasil
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
		
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-dialogs" spec="^1.3.3" />
	    <icon src="icon.png" width="57" height="57" density="mdpi" />

</widget>
