<?xml version='1.0' encoding='utf-8'?>
<widget id="webcarrao" version="2.0.0" xmlns="https://ncbrasil.com.br/" xmlns:cdv="https://ncbrasil.com.br/">

    <name>Webcarr√£o</name>
    <description>
        O maior portal de automoveis do Brasil.
    </description>
    <author email="joaovictordada2@gmail.com" href="https://ncbrasil.com.br/">
        NCBrasil
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
		
    </platform>
		    <icon src="icon.png" width="57" height="57" density="mdpi" />

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
		    <icon src="img/1024.png" platform="ios" width="1024" height="1024" density="mdpi" />
		    <icon src="img/Icon-72@2x.png" platform="ios" width="72" height="72" density="mdpi" />
		    <icon src="img/180.png" platform="ios" width="180" height="180" density="mdpi" />
		    <icon src="img/167.png" platform="ios" width="167" height="167" density="mdpi" />
		    <icon src="img/152.png" platform="ios" width="152" height="152" density="mdpi" />
		    <icon src="img/120.png" platform="ios" width="120" height="120" density="mdpi" />
		    <icon src="img/76.png" platform="ios" width="76" height="76" density="mdpi" />
			
    </platform>
	
	
	<!-- iPhone / iPod Touch -->
<icon src="icon.png" platform="ios" width="57" height="57" />
<icon src="img/iphone/icon@2x.png" platform="ios" width="114" height="114" />

<!-- iPad -->
<icon src="img/iphone/icon-72.png" platform="ios" width="72" height="72" />
<icon src="img/iphone/icon-72@2x.png" platform="ios" width="144" height="144" />

<!-- iPhone Spotlight and Settings Icon -->
<icon src="img/iphone/icon-small.png" platform="ios" width="29" height="29" />
<icon src="img/iphone/icon-small@2x.png" platform="ios" width="58" height="58" />

<!-- iPad Spotlight and Settings Icon -->
<icon src="img/iphone/icon-50.png" platform="ios" width="50" height="50" />
<icon src="img/iphone/icon-50@2x.png" platform="ios" width="100" height="100" />


    <plugin name="cordova-plugin-dialogs" spec="^1.3.3" />
	
<preference name="phonegap-version" value="cli-6.0.0" />

</widget>
