<?xml version='1.0' encoding='utf-8'?>
<widget id="webcarrao" version="1.0.17" xmlns="https://ncbrasil.com.br/" xmlns:cdv="https://ncbrasil.com.br/">

    <name>Webcarr√£o</name>
    <description>
        O maior portal de automoveis do Brasil.
    </description>
    <author email="joaovictordada2@gmail.com" href="https://ncbrasil.com.br/">
        NCBrasil
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
		
    </platform>
		    <icon src="icon.png" width="57" height="57" density="mdpi" />

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
		    <icon src="img/1024.png" platform="ios" width="1024" height="1024" density="mdpi" />
		    <icon src="img/Icon-72@2x.png" platform="ios" width="72" height="72" density="mdpi" />
		    <icon src="img/180.png" platform="ios" width="180" height="180" density="mdpi" />
		    <icon src="img/167.png" platform="ios" width="167" height="167" density="mdpi" />
		    <icon src="img/152.png" platform="ios" width="152" height="152" density="mdpi" />
		    <icon src="img/120.png" platform="ios" width="120" height="120" density="mdpi" />
		    <icon src="img/76.png" platform="ios" width="76" height="76" density="mdpi" />

    </platform>
    <plugin name="cordova-plugin-dialogs" spec="^1.3.3" />
	
<preference name="phonegap-version" value="cli-5.4.1" />

</widget>
